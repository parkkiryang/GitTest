
public class Ex04 {

	public static void main(String[] args) {
		int sum=0;
		
		for(int i=0; i<=100; i++)
			sum +=i;
		
		System.out.printf("sum : %d, avg : %.1f " , sum, sum/100.0 );
		System.out.println("\n--------------------------");
		for(int i=0; i<=100; i++)
			sum +=i;
		
		System.out.printf("sum : %d, avg : %.1f " , sum, sum/100.0 );
	}

}
