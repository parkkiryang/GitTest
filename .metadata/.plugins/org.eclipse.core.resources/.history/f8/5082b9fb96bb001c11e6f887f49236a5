
public class Ex03 {
	public static void main(String[] args) { // jvm 호출

		// int 배열 1~100 사이 값을 랜덤하게 입력받아서 총합 /평균 구하기

		int sum = 0;
		double avg = 0;

		int[] nArr = new int[10];

		// 랜덤입력
		for (int i = 0; i < 10; i++)
			nArr[i] = (int) (Math.random() * 99) + 1;

		// 총합구하기
		for (int i = 0; i < 10; i++)
			sum += nArr[i];

		// 총점.평균 출력
		System.out.println("총점 : " + sum);
		System.out.println("평균 : " + (double) sum / nArr.length);

	}
}
